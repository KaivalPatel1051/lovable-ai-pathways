# Database Configuration
MONGODB_URI=mongodb://localhost:27017/addiction-recovery-app
# For production: mongodb+srv://username:password@cluster.mongodb.net/addiction-recovery-app

# JWT Configuration
JWT_SECRET=addiction-recovery-super-secret-jwt-key-2024-development-make-it-long-and-random
JWT_REFRESH_SECRET=addiction-recovery-refresh-token-secret-2024-development
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:8082

# Email Configuration (for password reset, verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=development@example.com
EMAIL_PASS=development-password
EMAIL_FROM=development@example.com

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=development-cloud
CLOUDINARY_API_KEY=development-api-key
CLOUDINARY_API_SECRET=development-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Real-time Features
SOCKET_IO_CORS_ORIGIN=http://localhost:8082
